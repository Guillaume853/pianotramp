

<% @pianos.each do |piano| %>
  <%= link_to piano_path (piano) do %>
    <div class="card">
      <div class="card-category">Popular</div>
      <div class="card-description">
        <h3><%= piano.brand %></h2>
        <p>address : <i><%=piano.address %></p>
      </div>
      <%= image_tag 'user.jpg', class: "card-user avatar"%>
    </div>
  <%end %>
<% end %>

