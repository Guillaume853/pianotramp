<div class="container">
  <div class="padded">
  </div>

  <div class="media-aside">
    <div class="row">
      <div class="media-section col-xs-12 col-sm-6">
        <h1><%= @piano.brand%></h1>
        <h5> Last update : <%= @piano.updated_at %> </h5>
        <h6> address: <%= @piano.address %></h6>
        <% if @piano.user == current_user %>
          <%= link_to "Modify", edit_piano_path, class: "btn btn-warning" %>
          <%= link_to "Delete", piano_path(@piano), method: :delete, class: "btn btn-danger" %>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-6">

        <div id="map" style="width: 100%; height: 400px;">
        </div>

        <script type="text/javascript" src=<%= @gmap %> ></script>

        <script type="text/javascript">

          var latitude = <%= @piano.latitude %>;
          var longitude = <%= @piano.longitude %>;

          var myLatlng = new google.maps.LatLng(latitude,longitude);


          var myOptions = {
              zoom: 14,
              center: myLatlng,
              mapTypeId: google.maps.MapTypeId.ROADMAP,
              styles: []
          };

          var map = new google.maps.Map(document.getElementById('map'), myOptions);
          var marker = new google.maps.Marker({
              position: myLatlng,
              map: map,
              title: "You are here!"
          });
        </script>

      </div>
    </div>

  </div>
</div>

